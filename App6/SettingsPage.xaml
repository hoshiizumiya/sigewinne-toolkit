<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="App6.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:App6"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:App6"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border Padding="20">
        <ScrollViewer>
            <StackPanel Margin="30,0,30,0" Spacing="3">

                <controls:SettingsCard x:Uid="ViewPageSettingsStealthMode">
                    <ToggleSwitch
                        MinWidth="10"
                        IsOn="{x:Bind StealthMode, Mode=TwoWay}"
                        Style="{ThemeResource RightAlignedCompactToggleSwitchStyle}" />
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xED1A;" />
                    </controls:SettingsCard.HeaderIcon>
                </controls:SettingsCard>
            </StackPanel>

        </ScrollViewer>
    </Border>
</Page>
